<h2 class="text-xl p-16">Sign up</h2>
<div class="w-100">
<div class="container flex justify-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="flex flex-col justify-center bg-[#E8C4C4] p-32 rounded-lg">
  <div class="field">
    <%= f.label :name, class: "border-black border-2 p-2 mb-4 rounded-md " %><br />
    <%= f.text_field :name,class: "my-5 p-2 border-2 border-black rounded-md " , autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "border-black border-2 p-2 mb-4 rounded-md " %><br />
    <%= f.email_field :email, autofocus: true,class: "my-5 p-2 border-2 border-black rounded-md " , autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "border-black border-2 p-2 mb-4 rounded-md " %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,class: "my-5 p-2 border-2 border-black rounded-md " , autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "border-black border-2 p-2 mb-4 rounded-md " %><br />
    <%= f.password_field :password_confirmation,class: "my-5 p-2 border-2 border-black rounded-md " , autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "p-4 rounded-lg bg-[#2B3A55] text-white" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
