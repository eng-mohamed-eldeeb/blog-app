<h2 class="p-4 rounded-lg bg-[#2B3A55] text-white w-20 m-14">Log in</h2>

<div class="w-100">
<div class="container flex justify-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="flex flex-col justify-center bg-[#E8C4C4] p-32 rounded-lg">
  <div class="field">
    <%= f.label :email, class: "border-black border-2 p-2 mb-4 rounded-md " %><br />
    <%= f.email_field :email, autofocus: true, class: "my-5 p-2 border-2 border-black rounded-md ", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "border-black border-2 p-2 mb-4 rounded-md " %><br />
    <%= f.password_field :password, class: "my-5 p-2 border-2 border-black rounded-md ", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "p-4 rounded-lg bg-[#2B3A55] text-white"  %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
